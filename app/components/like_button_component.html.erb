<% if @like_object.persisted? %>
  <%= form_with model: @like_object, class: selected_class, 
  data: { controller: 'button_modifier', post_target: 'likeButton' }, method: :delete do |form| %>
    <%= form.hidden_field :target_id %>
    <%= form.button options = { data: { action: 'click->post#toggleLiked' },
     class: selected_class} do %>
      <%= inline_svg_tag 'cross.svg', class: 'post__social-button-icon' %>
      Like
    <% end %>
  <% end %>
<% else %>
  <%= form_with model: @like_object, class: default_class, 
  data: { controller: 'button_modifier', post_target: 'likeButton' } do |form| %>
    <%= form.hidden_field :target_id %>
    <%= form.button options = { data: { action: 'click->post#toggleLiked' },
     class: default_class} do %>
      <%= inline_svg_tag 'cross.svg', class: 'post__social-button-icon' %>
      Like
    <% end %>
  <% end %>
<% end %>
